FIND_PATH(Ntl_INCLUDE_DIR  NTL/mat_ZZ.h)
FIND_LIBRARY(Ntl_LIBRARY NAMES ntl)

IF (Ntl_INCLUDE_DIR)
  MESSAGE(${Ntl_INCLUDE_DIR})
  MESSAGE("Found Ntl Include dir")
else (Ntl_INCLUDE_DIR)
  MESSAGE("Didn't Ntl Include dir")
ENDIF (Ntl_INCLUDE_DIR)

IF (Ntl_LIBRARY)
  MESSAGE("Found Ntl LIB dir")
else (Ntl_LIBRARY)
  MESSAGE("Did not find Ntl LIB dir")
ENDIF (Ntl_LIBRARY)

IF (Ntl_INCLUDE_DIR AND Ntl_LIBRARY)
  SET(Ntl_FOUND TRUE)
ENDIF (Ntl_INCLUDE_DIR AND Ntl_LIBRARY)

IF (Ntl_FOUND)
  IF (NOT Ntl_FIND_QUIETLY)
    MESSAGE(STATUS "Found Ntl: ${Ntl_LIBRARY}")
  ENDIF (NOT Ntl_FIND_QUIETLY)
ELSE (Ntl_FOUND)
  IF (Ntl_FIND_REQUIRED)
    MESSAGE(FATAL_ERROR "Could not find Ntl")
  ENDIF (Ntl_FIND_REQUIRED)
ENDIF (Ntl_FOUND)

